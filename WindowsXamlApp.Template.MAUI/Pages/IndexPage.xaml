<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WindowsXamlApp.Template.MAUI.Pages.IndexPage">
    <Grid>
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300">
            <Label Text="{Binding CurrentTimeString}" />
            <BoxView HeightRequest="200" />
            <Label Text="MAUI" />
            <Button Text="Show toast message" Command="{Binding ShowToastCommand}" CommandParameter="Hello, World!" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>