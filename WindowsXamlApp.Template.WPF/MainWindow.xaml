<Window x:Class="WindowsXamlApp.Template.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="Windows XAML Application by WPF">
    <Grid>
        <Frame x:Name="MainFrame" x:FieldModifier="public" />
        <Border x:Name="DialogContent" x:FieldModifier="public" Background="#88000000" Visibility="Collapsed" />
        <Border x:Name="ToastContent" x:FieldModifier="public" Background="Black" CornerRadius="8" Margin="8" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Collapsed">
            <TextBlock Foreground="White" Margin="8" />
        </Border>    
    </Grid>
</Window>

